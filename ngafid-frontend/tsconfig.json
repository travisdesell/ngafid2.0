{
    "compilerOptions": {
        "target": "ES2024",
        "module": "ESNext",
        "jsx": "react-jsx",

        "strict": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "skipLibCheck": true,

        "allowJs": true,
        "checkJs": false,

        "noEmit": true,

        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*"
    ]
}